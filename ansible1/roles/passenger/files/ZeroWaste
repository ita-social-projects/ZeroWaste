ssl_certificate_key /etc/letsencrypt/live/calc.zerowastelviv.org.ua/privkey.pem;
ssl_certificate /etc/letsencrypt/live/calc.zerowastelviv.org.ua/fullchain.pem;

upstream app1 {
  server unix:/var/www/app1/current/tmp/sockets/puma.sock fail_timeout=0;
}

upstream app2 {
  server unix:/var/www/app2/current/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  listen 80;
  server_name calc.zerowastelviv.org.ua;
  return 301 https://calc.zerowastelviv.org.ua$request_uri;
}

server {
  listen 443 ssl;

  server_name calc.zerowastelviv.org.ua;

  ssl_certificate_key /etc/letsencrypt/live/calc.zerowastelviv.org.ua/privkey.pem;
  ssl_certificate /etc/letsencrypt/live/calc.zerowastelviv.org.ua/fullchain.pem;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
ssl_ciphers EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
ssl_prefer_server_ciphers on;
ssl_stapling on;
ssl_stapling_verify on;
ssl_session_cache shared:SSL:128m;
ssl_session_timeout 120m;

  root /home/andrii/ZeroWaste/current/public;

  passenger_enabled on;
  passenger_app_env production;

  location /cable {
    passenger_app_group_name ZeroWaste_websocket;
    passenger_force_max_concurrent_requests_per_process 0;
  }

  # Allow uploads up to 100MB in size
  client_max_body_size 100m;

  location ~ ^/(assets|packs) {
    proxy_pass http://app1;
    expires max;
    gzip_static on;
  }
}

server {
  listen 80;
  server_name zerowaste-staging.pp.ua;

  root /home/andrii/ZeroWaste/current/public;

  location / {
    proxy_pass http://app2;
  }
}