@import 'bootstrap/dist/css/bootstrap';

// navigation
body {
  background: url(<%= asset_path'mother.jpeg' %>) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.page-header {
  padding: 20px 40px 20px 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid gray;
}

.donate-btn {
  background-color: Transparent;
  border: 3px solid rgb(168, 167, 167);
  border-radius: 4px;
  padding: 8px 8px;
  font-size: 1.2em;
  color: rgb(26, 25, 25) !important;
}
.tab,
.logo {
  color: rgb(26, 25, 25) !important;
}
.logo {
  font-size: 2.5em;
}

.tab {
  padding-left: 20px;
  font-weight: 600;
}

// home-page

// footer
.footer-items {
  justify-content: space-around;
  text-align: center;
  color: rgb(26, 25, 25) !important;
  border-bottom: 1px solid rgb(255, 255, 255);
}
.footer a,
.donate-btn a {
  color: rgb(26, 25, 25) !important;
}

.link {
  padding: 10px;
}
.above {
  margin-top: 10px;
  margin-bottom: 10px;
}
.form-control {
  border: 1px solid #9e1503;
}


// admin

body.admin {
  background: none;
}

.admin-container {
  padding-top: 100px;
}

.admin-container h1 {
  margin-bottom: 30px;
}

