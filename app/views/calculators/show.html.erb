<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Comfortaa&family=Nunito&display=swap" rel="stylesheet">
<h1 class="display-4 text-center mt-5 mb-5">
  <%= t '.welcome_header' %>
</h1>
<div class="container home">
  <div class="jumbotron">
    <div class="container">
      <div class="row main-container">
        <div class="rounded float-left">
          <%= image_tag "search.png", height: 70 %>
        </div>
        <div class="form-container">
          <h3 class="container ml-2"><%= t '.form_description' %></h3>
          <form action="" id = "form" class="container mt-3">
            <div class="container input-group d-flex justify-content-between">
              <label for="" class="text-center">
                <input id="birth" type="text" placeholder="<%= t '.form.childs_birthday_label' %>" class="col datepick" />
              </label>
            </div>
            <div class="container ml-3 mt-4 form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="flexCheckChecked"
                checked
              />
              <label class="form-check-label" for="flexCheckChecked">
                <%= t '.want_recomentation_label' %>
              </label>
            </div>
            <button type="submit" class="btn btn-success ml-3 mt-4">
              <%= image_tag "calculator.png", height: 25 %>
              <%= t '.calculate_result_button' %>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container calculation-results">
      <div class="row">
        <div class="col-sm result-card">
          <%= image_tag "diapers.png", class:"rounded float-left", height: 70 %>
          <p>0</p>
          <%= t '.bought_diapers' %>
        </div>
        <div class="col-sm result-card">
          <%= image_tag "money.png", class:"rounded float-left", height: 70 %>
          <p>0</p>
          <%= t '.money_spent' %>
        </div>
        <div class="col-sm result-card">
          <%= image_tag "naphtha.png", class:"rounded float-left", height: 70 %>
          <p>0</p>
          <%= t '.mililiters_of_naphtha' %>
        </div>
        <div class="col-sm last-result-card">
          <%= image_tag "plastic.png", class:"rounded float-left", height: 70 %>
          <p>0</p>
          <%= t '.gram_of_plastic' %>
        </div>
      </div>
    </div>
