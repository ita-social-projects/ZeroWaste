<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card text-center">
        <div class="card-block">
          <h2><%= t('.change_password_header') %></h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, t('.form.new_password_label') %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('.form.minimal_length_label') %>)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, t('.form.confirm_password_label') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div><br />

            <div class="actions">
              <%= f.submit t('.change_password_button'), class: "btn btn-primary"  %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
